<resources>
    <color name="colorPrimaryTransparent">#2196f3</color>
    <color name="colorPrimary">#1E88E5</color>
    <color name="colorPrimaryDark">#1565C0</color>
    <color name="colorAccent">#1565C0</color>
    <color name="colorCreation">#FF9800</color>
    <color name="colorCreationDark">#F57C00</color>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme"/>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#99222222</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetailText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#81D4FA</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textColorLink">#333333</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColorHighlight">#333333</item>
    </style>

    <style name="CustomDetailText" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textColorLink">#333333</item>
        <item name="android:textColorHighlight">#333333</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/disable_text</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textColorLink">#333333</item>
        <item name="android:textColorHighlight">#333333</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/disable_text</item>
        <item name="colorControlNormal">#dfdfdf</item>
        <item name="colorControlActivated">@android:color/holo_blue_dark</item>
    </style>

    <style name="TimePickerDialogStyle">
        <item name="colorAccent">@color/colorPrimary</item> <!-- colorAccent here seems to work just fine? -->
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>
</resources>
